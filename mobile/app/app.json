{
  "expo": {
    "name": "CRM PLUS",
    "slug": "crm-plus",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F3D5C"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tiagovindima.crmplus",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "Permitir acesso à localização para escolher locais no mapa.",
        "NSCameraUsageDescription": "CRM Plus precisa aceder à câmara para tirar fotos dos imóveis.",
        "NSPhotoLibraryUsageDescription": "CRM Plus precisa aceder à galeria para selecionar fotos dos imóveis.",
        "NSPhotoLibraryAddUsageDescription": "CRM Plus pode guardar fotos na galeria."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyBkz8z8z8z8z8z8z8z8z8z8z8z8z8z"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F3D5C"
      },
      "package": "com.tiagovindima.crmplus",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBkz8z8z8z8z8z8z8z8z8z8z8z8z8z"
        }
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "2b8e9c4e-eb12-427e-862a-f74ecb555aea"
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir acesso à localização para escolher locais no mapa."
        }
      ]
    ]
  }
}
